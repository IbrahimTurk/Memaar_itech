<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

      <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="yarn_type_setting" invisible="1"/>
                <field name="total_height_setting" invisible="1"/>
                <field name="loop_weight_setting" invisible="1"/>
               <field name="yarn_type" attrs="{'invisible': [('yarn_type_setting', '=',False )]}"/>
               <field name="total_height" attrs="{'invisible': [('total_height_setting', '=',False )]}"/>
               <field name="loop_weight" attrs="{'invisible': [('loop_weight_setting', '=',False )]}"/>
            </xpath>
        </field>
      </record>
      <record id="product_product_form_view_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
            <field name="yarn_type_setting" invisible="1"/>
                <field name="total_height_setting" invisible="1"/>
                <field name="loop_weight_setting" invisible="1"/>
          <field name="yarn_type" attrs="{'invisible': [('yarn_type_setting', '=',False )]}"/>
               <field name="total_height" attrs="{'invisible': [('total_height_setting', '=',False )]}"/>
               <field name="loop_weight" attrs="{'invisible': [('loop_weight_setting', '=',False )]}"/>
            </xpath>
        </field>
      </record>
      <record id="product_template_tree_view_2" model="ir.ui.view">
        <field name="name">product.template.product.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[last()]" position="after">
            <field name="yarn_type_setting" invisible="1"/>
                <field name="total_height_setting" invisible="1"/>
                <field name="loop_weight_setting" invisible="1"/>
                <field name="yarn_type" attrs="{'invisible': [('yarn_type_setting', '=',False )]}"/>
               <field name="total_height" attrs="{'invisible': [('total_height_setting', '=',False )]}"/>
               <field name="loop_weight" attrs="{'invisible': [('loop_weight_setting', '=',False )]}"/>
            </xpath>
        </field>
      </record>
      <record id="product_product_tree_view_3" model="ir.ui.view">
        <field name="name">product.product.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[last()]" position="after">
            <field name="yarn_type_setting" invisible="1"/>
                <field name="total_height_setting" invisible="1"/>
                <field name="loop_weight_setting" invisible="1"/>
              <field name="yarn_type" attrs="{'invisible': [('yarn_type_setting', '=',False )]}"/>
               <field name="total_height" attrs="{'invisible': [('total_height_setting', '=',False )]}"/>
               <field name="loop_weight" attrs="{'invisible': [('loop_weight_setting', '=',False )]}"/>
            </xpath>
        </field>
      </record>
    </data>

</odoo>




